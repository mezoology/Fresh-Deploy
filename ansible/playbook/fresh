---
- hosts: all
  become: yes
  tasks:
    - name: update && upgrade $$ install 
      apt: 
        update_cache: yes
        udpgrade: dist
        name: "{{ item }}"               
      loop:
        - fail2ban
        - figlet
        - bc
        - fortune
  tasks:
    - name: add motd script to .profile
      blockinfile:
        path: /root/.proflie
        block: {{ lookup('file', 'ansible\templates\.profile') }}
  tasks:
    - name: download the repo
      git:
        repo: xxxxx
        dest: /opt/fresh/
        clone: yes
        update: yes

